---
import KofiBtn from './KofiBtn.astro'
import yellowBlob from '../assets/blobs/yellow.png'
import blueBlob from '../assets/blobs/blue.png'
---

<div class='px-s py-3xl relative'>
	<img
		class='absolute right-s md:right-48 lg:right-96 top-[-10%] lg:top-[-4%] drop-shadow-hard motion-safe:animate-[bounce_3s_ease-in-out_infinite]'
		src={blueBlob.src}
		alt=''
	/>
	<div
		class='p-m sm:p-xl border-4 border-inherit bg-cream-200 max-w-4xl mx-auto space-y-l drop-shadow-hard relative'
	>
		<p class='text-step-0 font-bold font-kode'>
			We love games, and think you should enjoy them ad free, tracking
			free, no strings attached. Your support keeps us going!
		</p>

		<div class='flex justify-center mb-0'>
			<KofiBtn />
		</div>
		<img
			class='absolute left-[-4%] bottom-[-8%] sm:bottom-s z-20 motion-safe:animate-bounce'
			src={yellowBlob.src}
			alt=''
		/>
	</div>
</div>
